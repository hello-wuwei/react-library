{
  "name": "mx-admin",
  "version": "0.0.0",
  "description": "Shared modules for MX projects",
  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "build:components": "lerna run build --scope=@mx-admin/components",
    "build:core": "lerna run build --scope=@mx-admin/core",
    "build:hooks": "lerna run build --scope=@mx-admin/hooks",
    "build:placement": "lerna run build --scope=@mx-admin/placement",
    "build:router": "lerna run build --scope=@mx-admin/router",
    "build:services": "lerna run build --scope=@mx-admin/services",
    "build:user-label": "lerna run build --scope=@mx-admin/user-label",
    "build:utils": "lerna run build --scope=@mx-admin/utils",
    "build:audience-system": "lerna run build --scope=@mx-admin/audience-system",
    "build:oss-system": "lerna run build --scope=@mx-admin/oss-system",
    "build-dev": "lerna run build-dev",
    "build-dev:components": "lerna run build-dev --scope=@mx-admin/components",
    "build-dev:core": "lerna run build-dev --scope=@mx-admin/core",
    "build-dev:hooks": "lerna run build-dev --scope=@mx-admin/hooks",
    "build-dev:placement": "lerna run build-dev --scope=@mx-admin/placement",
    "build-dev:router": "lerna run build-dev --scope=@mx-admin/router",
    "build-dev:services": "lerna run build-dev --scope=@mx-admin/services",
    "build-dev:user-label": "lerna run build-dev --scope=@mx-admin/user-label",
    "build-dev:utils": "lerna run build-dev --scope=@mx-admin/utils",
    "build-dev:audience-system": "lerna run build-dev --scope=@mx-admin/audience-system",
    "build-dev:oss-system": "lerna run build-dev --scope=@mx-admin/oss-system",
    "watch": "concurrently \"npm:watch:*\" --kill-others",
    "watch:components": "lerna run watch --scope=@mx-admin/components",
    "watch:core": "lerna run watch --scope=@mx-admin/core",
    "watch:hooks": "lerna run watch --scope=@mx-admin/hooks",
    "watch:placement": "lerna run watch --scope=@mx-admin/placement",
    "watch:router": "lerna run watch --scope=@mx-admin/router",
    "watch:services": "lerna run watch --scope=@mx-admin/services",
    "watch:user-label": "lerna run watch --scope=@mx-admin/user-label",
    "watch:utils": "lerna run watch --scope=@mx-admin/utils",
    "watch:audience-system": "lerna run watch --scope=@mx-admin/audience-system",
    "watch:oss-system": "lerna run watch --scope=@mx-admin/oss-system",
    "prepare-rc-publish": "git fetch && lerna version --exact --preid rc --no-push --conventional-commits --conventional-prerelease --no-changelog",
    "prepare-publish": "git fetch && lerna version --exact --no-push --conventional-commits --conventional-graduate --preid rc",
    "publish-local": "lerna run publish-local",
    "clean-dist": "node ./scripts/clean-dist.mjs",
    "test": "jest",
    "test:components": "jest --selectProjects components",
    "test:core": "jest --selectProjects core",
    "test:hooks": "jest --selectProjects hooks",
    "test:placement": "jest --selectProjects placement",
    "test:router": "jest --selectProjects router",
    "test:services": "jest --selectProjects services",
    "test:user-label": "jest --selectProjects user-label",
    "test:utils": "jest --selectProjects utils",
    "test:audience-system": "jest --selectProjects audience-system",
    "test:oss-system": "jest --selectProjects oss-system",
    "commit": "cz",
    "prepare": "husky install",
    "package-graph": "nx graph"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@rollup/plugin-eslint": "^9.0.4",
    "@rollup/plugin-typescript": "^11.1.3",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "<13",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "colorette": "^1.1.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^8.1.0",
    "globby": "10.0.1",
    "husky": "^8.0.3",
    "is-plain-object": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^7.4.2",
    "less": "^4.2.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.30",
    "postcss-less": "^6.0.0",
    "prettier": "^3.0.3",
    "rollup": "^3.29.2",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-postcss-webpack-alias-less-loader": "^1.0.0",
    "rollup-plugin-prettier": "^4.0.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-less": "^2.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
